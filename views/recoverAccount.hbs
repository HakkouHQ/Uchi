{{#ifEquals notifs "OK_EMAIL_SENT"}}
<div id="resetPasswordAck">
    <h2 class="title is-3">Email sent</h2>
    <p>You will receive an email containing the
        password reset link if the email exists in our records.</p>
</div>
{{else}}
<div id="recoveryEmailInput">
    <p class="subtitle is-6 has-text-weight-bold has-text-centered">Request password reset link</p>
    <form id="recoveryEmailForm" method="POST">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="field">
            <div class="control has-icons-left has-icons-right">
                <input id="email" name="email" class="input" type="email" placeholder="Existing Email">
                <span class="icon is-small is-left">
                    <i class="fas fa-user"></i>
                </span>
            </div>
        </div>
        <button class="button is-primary is-fullwidth">
            <span class="icon is-small">
                <i class="fas fa-paper-plane"></i>
            </span>
            <span>Send recovery link</span>
        </button>
    </form>
    <hr>
    <div class="has-text-centered">
        <a class="has-text-primary" data-pjax='main' href="/login"><i class="fas fa-long-arrow-alt-left"></i> Return to
            login</a>
    </div>
</div>
{{/ifEquals}}